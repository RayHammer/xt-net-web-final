<header class="container-fluid color-main">
    <div class="container-md">
        <div id="header-nav" class="row">
            <div class="col col-sm-auto">
                <a href="~/" id="header-logo"></a>
            </div>
            <div id="header-content" class="col-auto col-sm">
                <h3>jposting</h3>
            </div>
            <div class="col-auto">
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="float-right dropdown">
                        <a role="button" href="~/Pages/Login" class="btn btn-light dropdown-toggle" id="login-menu-button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Login
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" id="header-login-menu" aria-labelledby="login-menu-button">
                            <form method="post" action="~/Pages/Login" class="px-4 py-1">
                                <div class="form-group">
                                    <label for="header-username-field">
                                        Username
                                    </label>
                                    <input type="text" name="username" placeholder="Username" class="form-control" id="header-username-field" />
                                </div>
                                <div class="form-group">
                                    <label for="header-password-field">
                                        Password
                                    </label>
                                    <input type="password" name="password" placeholder="********" class="form-control" id="header-password-field" />
                                </div>
                                <button type="submit" class="btn btn-primary">Login</button>
                            </form>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Pages/SignUp">
                                Don't have an account?
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <a href="~/Pages/Login?logout=true" class="btn btn-primary">
                        Logout
                    </a>
                }
            </div>
        </div>
    </div>
</header>